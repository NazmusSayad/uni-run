{
  "name": "uni-run",
  "version": "2.0.0",
  "sideEffects": false,
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "lint:fix": "eslint . --fix",
    "lint:tc": "tsc --noEmit --watch",
    "lint": "tsc --noEmit && eslint .",
    "exports": "tsx ./write-exports.ts",
    "build": "tsdown --config ./tsdown.config.ts",
    "dev": "concurrently --names \"R,T\" --prefix-colors \"blue.dim,magenta.dim\" \"tsdown --config ./tsdown.config.ts --watch\" \"tsc --noEmit --watch\"",
    "start": "tsx --watch ./src/index.ts",
    "bin": "tsx ./src/bin.ts",
    "json": "tsx ./src/json-schema.ts"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "exports": {
    "./bin": {
      "import": "./dist/bin.mjs",
      "require": "./dist/bin.cjs"
    },
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "typesVersions": {
    "*": {
      "bin": [
        "./dist/bin.d.mts",
        "./dist/bin.d.cts"
      ],
      ".": [
        "./dist/index.d.mts",
        "./dist/index.d.cts"
      ]
    }
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.38.0",
    "@types/bun": "^1.3.0",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "chalk": "^5.6.2",
    "chokidar": "^5.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-check-file": "^3.3.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "ignore": "^7.0.5",
    "noarg": "^3.1.9",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "rolldown": "1.0.0-rc.5",
    "tsdown": "^0.15.9",
    "tslib": "^2.8.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vitest": "^4.0.18",
    "zod": "^4.3.6"
  }
}
