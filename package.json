{
  "name": "uni-run",
  "version": "1.0.13",
  "description": "Universal Runner for many language",
  "scripts": {
    "dev": "npmize dev",
    "build": "npmize build",
    "tsc": "tsc --watch --noEmit",
    "cjs": "node --watch ./dist/__lab__/index.cjs",
    "mjs": "node --watch ./dist/__lab__/index.mjs",
    "lab": "run ./src/__lab__/index.ts --focus ./src"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "bin": {
    "run": "./dist/bin.cjs",
    "uni-run": "./dist/bin.cjs"
  },
  "dependencies": {
    "ansi-colors": "^4.1.3",
    "chokidar": "^4.0.1",
    "cross-spawn": "^7.0.3",
    "ignore": "^6.0.2",
    "noarg": "^3.1.3"
  },
  "devDependencies": {
    "@types/cross-spawn": "^6.0.6",
    "@types/node": "^22.7.3",
    "npmize": "^1.1.9",
    "typescript": "^5.6.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NazmusSayad/uni-run"
  }
}
